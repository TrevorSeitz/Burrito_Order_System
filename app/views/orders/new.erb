<h1>NEW ORDER</h1>

<form action="/orders/preview" method="POST">
<% Burrito.all.each do |burrito| %>
  <input id="<%= burrito.name %>" type="checkbox" name="burritos[]" value="<%= burrito.id %>">
 <label for="burritos[]"><%= burrito.name %><br> 
    <%= burrito.description %><br>
    $<%= burrito.price %><br><br>
    Quantity: <input type="number" name="quantity[]" id"quantity" min="0"><br><br><br>
  </label> 
<%end%>

  <input type="submit" value="Submit">
</form>